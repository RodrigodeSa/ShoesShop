<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="8dp"
    android:layout_marginVertical="8dp"
    android:layout_marginEnd="16dp">

    <ImageView
        android:id="@+id/iv_pic_brand"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:padding="2dp"
        android:background="@drawable/grey_bg"
        tools:srcCompat="@drawable/grey_bg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_title_brand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:text="@string/title"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:visibility="gone"
        tools:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/iv_pic_brand"
        app:layout_constraintStart_toEndOf="@+id/iv_pic_brand"
        app:layout_constraintTop_toTopOf="@+id/iv_pic_brand" />


</androidx.constraintlayout.widget.ConstraintLayout>